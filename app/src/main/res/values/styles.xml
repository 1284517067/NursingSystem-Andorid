<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AdviceTheme">
        <item name="android:src">@mipmap/advice</item>
        <item name="android:text">@string/doctoradvice</item>
    </style>
    <style name="Blood_sampingTheme">
        <item name="android:src">@mipmap/blood_samping</item>
        <item name="android:text">@string/blood_samping</item>
    </style>
    <style name="TourTheme">
        <item name="android:src">@mipmap/bed</item>
        <item name="android:text">@string/tour</item>
    </style>
    <style name="InformationTheme">
        <item name="android:src">@mipmap/information</item>
        <item name="android:text">@string/information</item>
    </style>
    <style name="LoginActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


</resources>
