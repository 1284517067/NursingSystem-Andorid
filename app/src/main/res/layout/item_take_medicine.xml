<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="90dp"
            android:minWidth="90dp"
            android:paddingHorizontal="10dp"
            android:paddingTop="20sp"
            android:textColor="@color/hint_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tm_bed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tm_name"
            android:paddingHorizontal="15sp"
            android:paddingTop="10dp"
            android:textColor="@color/hint_text_color"
            android:textSize="15sp" />

        <View
            android:id="@+id/line4"
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/tm_name"
            android:background="@color/gray"
            android:paddingTop="300dp" />

        <TextView
            android:id="@+id/tm_medicine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/line4"
            android:gravity="center"
            android:maxWidth="170sp"
            android:minWidth="170dp"
            android:paddingHorizontal="10sp"
            android:textColor="@color/hint_text_color"
            android:textSize="20dp" />

        <View
            android:id="@+id/line5"
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/tm_medicine"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/line5"
            android:gravity="center"
            android:maxWidth="75dp"
            android:minWidth="75dp"
            android:textColor="@color/hint_text_color" />

        <View
            android:id="@+id/line6"
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/tm_time"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tm_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/line6"
            android:maxWidth="150dp"
            android:paddingLeft="10dp"
            android:textColor="@color/hint_text_color"
            android:textSize="20dp" />


    </RelativeLayout>


    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>