<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/doctor_advice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/check_advice_list_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/hint_text_color"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="80sp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/check_advice_list_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/hint_text_color"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="80sp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/check_advice_list_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/hint_text_color"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="80sp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/check_advice_list_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/hint_text_color"
            android:textSize="18sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="80sp"
            android:background="@color/gray" />
    </LinearLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="@id/doctor_advice_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>